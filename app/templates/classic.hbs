<h1 class="mb-4">Classic Components</h1>
<div class="flex flex-row flex-wrap mb-8">
  <FeatureTab
    class="bg-blue-light"
    @label="Variant"
    @text="Component Manager + Invocation Style" />
  <FeatureTab
    class="bg-teal-light"
    @label="Available"
    @text=">= 1.0-rc.6" />
  <FeatureTab
    class="bg-purple-light"
    @label="HTML Semantics"
    @text="Inner" />
  <FeatureTab
    class="bg-orange-light"
    @label="Splattributes"
    @text="No" />
  <FeatureTab
    class="bg-red-light"
    @label="Coolness Factor"
    @text={{this.coolness.factor.classic}} />
</div>

<h2 class="mb-4">Code</h2>
<CodePanel
  @blocks={{array
    (hash id="component" label="Component" snippet="star-rating.js")
    (hash id="template" label="Template" snippet="star-rating.hbs")
    (hash id="call" label="Call" snippet="star-rating-call.hbs")
    (hash id="html" label="HTML" snippet="star-rating-classic.html")
  }}
/>

<h2 class="mb-4">Result</h2>
{{star-rating
  rating=this.model.rating
  onClick=(action (mut this.model.rating)
)}}

<h3 class="mt-8 mb-2">Positional params</h3>
<CodeSnippet @name="star-rating-call-positional.hbs" class="mb-2" />
{{star-rating
  this.model.rating
  onClick=(action (mut this.model.rating)
)}}

<h3 class="mt-8 mb-2">Default values for arguments</h3>
<CodeSnippet @name="star-rating-call-with-default-arg-value.hbs" class="mb-2" />
{{star-rating
  rating=this.model.rating
  maxRating=10
  onClick=(action (mut this.model.rating)
)}}

